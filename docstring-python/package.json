
{
	"name": "docstring-python",
	"displayName": "Docstring Generator",
	"description": "Generates docstrings for Python code using an AI agent.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:docstring-python.generateDocstrings"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "docstring-python.generateDocstrings",
				"title": "Generate Docstrings"
			}
		],
        "configuration": {
            "title": "Docstring Generator Settings",
            "properties": {
                "docstring-python.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Your Google Gemini API key."
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
		"watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
        "package": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.84.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3",
		"@vscode/test-electron": "^2.3.8",
		"esbuild": "^0.19.0"
	}
}
